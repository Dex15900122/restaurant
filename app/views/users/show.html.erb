<%=image_tag @user.avatar%>

<div>
  <h2><%= @user.name %></h2>
  <p><strong><%= @user.email %></strong></p>
  <div><%= simple_format @user.intro %></div>
  <% if @user.email == current_user.email %>
    <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
  <% end %>
</div>