 <h3>Edit Profile</h3>
 
<%= form_for @user do |f| %>
  
  <%= f.label :name, "Name" %>
  <%=  f.text_field :name %>
        
  <%= f.label :intro, "自我介紹" %>
  <%= f.text_area :intro %>
  
  <%= f.label :avatar, "大頭照上傳" %>
  <%= image_tag @user.avatar if @user.avatar? %>
  <%= f.file_field :avatar %>     
  
  <%= f.submit "Update"%>
  <%= link_to "Cancel", user_path(@user) %>
         
<% end %>
 
  