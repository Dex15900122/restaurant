<% if @blog.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>



<%= form_for @blog,:url => restaurant_blog_path do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

 

  <%= f.label :photos, "photos" %>
  <%= image_tag @blog.photos, width:'300px' if   @blog.photos?%>
  <%= f.file_field :photos %>



  <%= f.submit %>
<% end %>